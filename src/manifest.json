{
  "description": "Deny Service Worker, by site",
  "manifest_version": 3,
  "name": "dsw",
  "browser_specific_settings": {
    "gecko": {
      "id": "dsw@kenrick95.org"
    }
  },

  "version": "1.0",
  "homepage_url": "https://github.com/kenrick95/dsw",

  "permissions": ["activeTab"],

  "background": {
    "scripts": ["background-script.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["https://*/*"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],

  "action": {
    "default_icon": "./icons/icon128.png",
    "default_title": "Deny Service Worker",
    "default_popup": "popup/index.html"
  }
}
